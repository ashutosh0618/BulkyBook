
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<category>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">category</h1>
        </div>
        <div class="col-6 text-end">  
            <a asp-controller="category" asp-action="Create" class="btn btn-primary"><i class="bi bi-patch-check"></i> Create New</a>

        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>name</th>
            <th>Dis order</th>
            <th></th>
         
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>

                <td>
                    @obj.name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary" ><i class="bi bi-patch-check"></i> Edit</a>
                         <a asp-controller="category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger" ><i class="bi bi-patch-check"></i> Remove</a>

                    </div>
                </td>
                  
                          
                    
            </tr>
        }
    </tbody>
</table>
